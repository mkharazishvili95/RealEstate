@{
    ViewData["Title"] = "RealEstate - Manage";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">

<div class="main-content">
    <h3>უძრავი ქონება - სამართავი პანელი</h3>
    <img src="https://img.freepik.com/premium-vector/creative-real-estate-logo-design_1072992-543.jpg" alt="Real Estate Logo" class="center-image">
    <div class="row">
        <div class="col-md-4">
            <div class="card p-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-people-fill card-icon"></i>
                    <div class="ms-3">
                        <h5 class="card-title">მომხმარებლები</h5>
                        <a href="@Url.Action("GetUser  List", "Manage")" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-buildings-fill card-icon"></i>
                    <div class="ms-3">
                        <h5 class="card-title">სააგენტოები</h5>
                        <a href="#" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-4">
            <div class="card p-3">
                <div class="d-flex align-items-center">
                    <i class="bi bi-house-door-fill card-icon"></i>
                    <div class="ms-3">
                        <h5 class="card-title">უძრავი ქონება</h5>
                        <a href="#" class="stretched-link"></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background-color: #e9ecef;
        margin: 0; 
        overflow-x: hidden; 
    }

    .main-content {
        margin: 0 auto;
        padding: 20px;
        background-color: #f8f9fa;
        min-height: 100vh; 
        max-width: 1200px;
        border-radius: 10px;
        display: flex; 
        flex-direction: column;
        align-items: center;
    }

    h3 {
        text-align: center;
        font-size: 2rem;
        font-weight: 700;
        color: #343a40;
        margin-bottom: 30px;
    }

    .center-image {
        display: block;
        margin: 0 auto;
        max-width: 300px;
        height: auto; 
        margin-bottom: 30px;
        border-radius: 50%;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        object-fit: cover;
    }

    .card {
        border: none;
        border-radius: 10px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-title {
        font-size: 1.5rem;
        font-weight: 600;
    }

    .card-icon {
        font-size: 2rem;
        color: #495057;
    }

    .row {
        margin-top: 20px;
        width: 100%; 
    }

    .card:hover {
        transform: translateY(-5px);
        transition: 0.3s ease-in-out;
        background-color: #e9ecef;
    }
</style>