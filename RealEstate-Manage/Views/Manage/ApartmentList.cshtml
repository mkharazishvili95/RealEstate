<div class="table-container">
    <table>
        <thead>
            <tr>
                <th>უძრავი ქონების ID</th>
                <th>სახელი</th>
                <th>სტატუსი</th>
                <th>PIN</th>
                <th>ფასი</th>
                <th>კვადრატულის ფასი</th>
                <th>ვალუტა</th>
                <th>სააგენტოს ID</th>
                <th>შექმნის თარიღი</th>
                <th>განახლების თარიღი</th>
                <th>წაშლის თარიღი</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model)
            {
                <tr>
                    <td>@row.ApartmentId</td>
                    <td>@row.Title</td>
                    <td>@row.Status</td>
                    <td>@row.UserPin</td>
                    <td>@row.Price</td>
                    <td>@row.UnitPrice</td>
                    <td>@row.CurrencyId</td>
                    <td>@row.AgencyId</td>
                    <td>@row.CreateDate?.ToString("yyyy-MM-dd")</td>
                    <td>@row.UpdateDate?.ToString("yyyy-MM-dd")</td>
                    <td>@row.DeleteDate?.ToString("yyyy-MM-dd")</td>
                </tr>
            }
        </tbody>
    </table>
</div>
<a href="@Url.Action("Index", "Home")" class="btn btn-primary" style="margin-left: 50px;">უკან დაბრუნება</a>

<style>
    table {
        width: 100%;
        margin: 20px 0;
        border-collapse: collapse;
    }

    th, td {
        padding: 12px;
        text-align: left;
        border: 1px solid #ddd;
    }

    th {
        background-color: #f2f2f2;
        color: #333;
    }

    tr:hover {
        background-color: #f5f5f5;
    }

    .table-container {
        width: 120%;
        margin: auto;
        overflow-x: auto;
    }

    .btn-primary {
        margin-left: 50px;
    }
</style>
